<?xml version="1.0"?>

<System>

<Plugins>
    <plugin name="redfish" lib="libpwr_redfishdev"/>
</Plugins>

<Devices>
    <device name="redfish-core1" plugin="redfish" initString="192.168.2.91:8080:local"/>
    <device name="redfish-core2" plugin="redfish" initString="192.168.2.91:8080:node1"/>
</Devices>

<Locations>
    <location name="daemon-cab0"  type="rpc" config="localhost:15000" />
</Locations>

<Objects>

<obj name="plat" type="Platform">

    <attributes>
        <attr name="POWER" op="SUM">
            <src type="child" name="cab0" />
        </attr>
    </attributes>

    <children>
        <child name="cab0" />
    </children>

</obj>

<obj name="plat.cab0" type="Chassis" location="daemon-cab0" >

    <attributes>
        <attr name="POWER" op="AVG" >
            <src type="child" name="node0" />
            <src type="child" name="node1" />
        </attr>
    </attributes>

    <children>
        <child name="node0" />
        <child name="node1" />
    </children>

</obj >

<obj name="plat.cab0.node0" type="Node" >
    <devices>
        <dev name="dev1" device="redfish-core1" openString="Chassis" /> 
    </devices>

    <attributes>
        <attr name="POWER" op="SUM" hz="10.0" >
            <src type="device" name="dev1" />
        </attr>
    </attributes>

</obj >

<obj name="plat.cab0.node1" type="Node" >
    <devices>
        <dev name="dev2" device="redfish-core2" openString="Chassis" /> 
    </devices>

    <attributes>
        <attr name="POWER" op="SUM" >
            <src type="device" name="dev2" />
        </attr>
    </attributes>

</obj >

</Objects>
</System>
