<?xml version="1.0"?>

<System>

<Plugins>
    <plugin name="redfish_plugin" lib="libpwr_redfishdev"/>
</Plugins>

<Devices>
    <device name="ilo-node1" plugin="redfish_plugin" initString="ilo4:localhost:8080:node1"/>
    <device name="ilo-node2" plugin="redfish_plugin" initString="ilo4:localhost:8080:node2"/>
    <device name="ilo-node3" plugin="redfish_plugin" initString="ilo4:localhost:8080:node3"/>
</Devices>


<Objects>

<obj name="plat" type="Platform">

    <attributes>
        <attr name="POWER" op="AVG">
            <src type="child" name="cab0" />
        </attr>
    </attributes>

    <children>
        <child name="cab0" />
    </children>

</obj>

<obj name="plat.cab0" type="Cabinet" >

    <attributes>
        <attr name="POWER" op="AVG" >
            <src type="child" name="chassis1" />
        </attr>
    </attributes>

    <children>
        <child name="chassis1" />
    </children>

</obj >

<obj name="plat.cab0.chassis1" type="Chassis" > 

    <attributes>
        <attr name="POWER" op="AVG" >
            <src type="child" name="node1" />
            <src type="child" name="node2" />
        </attr>
    </attributes>

    <children>
        <child name="node1" />
        <child name="node2" />
    </children>

</obj >

<obj name="plat.cab0.chassis1.node1" type="Node" >

    <devices>
        <dev name="system_pow_dev" device="ilo-node1" openString="chassis1.system1" /> 
    </devices>

    <attributes>
        <attr name="POWER" op="AVG"  >
            <src type="device" name="system_pow_dev" />
        </attr>
    </attributes>

</obj >

<obj name="plat.cab0.chassis1.node2" type="Node" >

    <devices>
        <dev name="system_pow_dev" device="ilo-node2" openString="chassis1.system2" /> 
    </devices>

    <attributes>
        <attr name="POWER" op="AVG"  >
            <src type="device" name="system_pow_dev" />
        </attr>
    </attributes>

</obj >

</Objects>
</System>
